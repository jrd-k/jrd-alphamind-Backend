# Backend Configuration Example
# Copy this to .env and fill in with your values

# FastAPI Settings
DEBUG=True
APP_NAME=jrd-alphamind-backend

# Database
DATABASE_URL=sqlite:///./dev.db
# For Postgres: DATABASE_URL=postgresql://postgres:postgres@db:5432/alphamind

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

# Broker Configuration
# Choose broker: paper, exness, or justmarkets
BROKER=paper

# Exness Credentials (if BROKER=exness)
EXNESS_API_KEY=your_exness_demo_key
EXNESS_BASE_URL=https://api.exness-demo.com

# JustMarkets Credentials (if BROKER=justmarkets)
JUSTMARKETS_API_KEY=your_justmarkets_demo_key
JUSTMARKETS_BASE_URL=https://api.justmarkets-demo.com

# DeepSeek AI (set your API key here, DO NOT commit secrets to git)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.ai/v1
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
 
# Live trading controls
ENABLE_LIVE_TRADING=False
# Set to a numeric value (e.g. 0.5) to cap per-trade size
MAX_TRADE_QTY=1.0

# TradingView webhook secret used to verify inbound webhooks
TRADINGVIEW_WEBHOOK_SECRET=

# CORS: comma-separated list of allowed frontend origins
FRONTEND_ORIGINS=http://localhost:3000,http://localhost:5173